<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <com.ost.ostwallet.uicomponents.OstSubHeaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="Please scan the QR Code from your\n old device to authorize this device"/>

    <ImageView
        android:id="@+id/iv_qr_view"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:src="@drawable/qr_icon"/>

    <RelativeLayout
        android:layout_marginTop="22dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_corner_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ost.ostwallet.uicomponents.OstTextView
            android:id="@+id/lbl_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="This Device Address"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"/>

        <com.ost.ostwallet.uicomponents.OstTextView
            android:id="@+id/atv_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lbl_device_address"
            android:textSize="12sp"
            android:text="0xbbfb321ba9531Ca0a8dE212f364A24b5dA1d7794"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <com.ost.ostwallet.uicomponents.OstPrimaryButton
        android:id="@+id/pbtn_check_device_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Check Device Status"
        android:textColor="@android:color/black"/>

</LinearLayout>