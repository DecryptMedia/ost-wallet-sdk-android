<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ost.com.demoapp.uicomponents.OstSubHeaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_30"
        android:text="@string/view_mnemonics_heading" />

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner_bg"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
    >

        <ost.com.demoapp.uicomponents.OstTextView
            android:id="@+id/mnemonics_tv_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_30"
            android:textColor="#34445b"
            android:lineHeight="45sp"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="left"
            />

        <ost.com.demoapp.uicomponents.OstTextView
            android:id="@+id/mnemonics_tv_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#34445b"
            android:lineHeight="45sp"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="left"
            />

    </LinearLayout>

    <ost.com.demoapp.uicomponents.OstTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#888888"
        android:text="@string/view_mnemonics_tip" />

</merge>