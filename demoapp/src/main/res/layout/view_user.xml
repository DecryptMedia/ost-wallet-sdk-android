<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="User image"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ic_arrow_forward_black_24dp" />

    <ost.com.demoapp.uicomponents.OstBoldTextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@id/iv_user_image"
        android:text="TIP"
        android:textColor="@color/user_list_user_name"
        android:textSize="@dimen/user_list_user_name" />

    <ost.com.demoapp.uicomponents.OstTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_user_name"
        android:layout_toEndOf="@id/iv_user_image"
        android:text="Welcome To Demo Wallet"
        android:textColor="@color/user_list_sub_header"
        android:textSize="@dimen/user_list_sub_header" />

    <ost.com.demoapp.uicomponents.OstListButton
        android:id="@+id/btn_send_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:text="Send"/>

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="#ededed"/>
</RelativeLayout>