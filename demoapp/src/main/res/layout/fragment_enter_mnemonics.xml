<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ost.com.demoapp.uicomponents.OstSubHeaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/enter_mnemonics_sub_heading" />

    <EditText
        android:id="@+id/et_mnemonics_phrase"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/enter_mnemonics_hint_phrase"
        android:inputType="text" />

    <ost.com.demoapp.uicomponents.OstPrimaryButton
        android:id="@+id/pbtn_recover_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/enter_mnemonics_recover_wallet" />
</merge>