<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_transfer_image"
            android:src="@drawable/ost_logo_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:contentDescription="value transfer image" />

        <TextView
            android:id="@+id/tv_transfer_type"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@id/iv_transfer_image"
            android:textSize="@dimen/sp_16"
            android:textColor="#597a84"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ost.com.demoapp.uicomponents.OstTextView
            android:id="@+id/tv_timestamp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_transfer_image"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_34445b"
            android:layout_below="@id/tv_transfer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ost.com.demoapp.uicomponents.OstTextView
            android:id="@+id/tv_value"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/received_token_amount"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_24"
            android:text="+10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3"/>
    </RelativeLayout>

</RelativeLayout>