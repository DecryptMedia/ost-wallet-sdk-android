<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.ost.walletsdk.ui.uicomponents.OstH1Label
        android:id="@+id/labelHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="" />

    <com.ost.walletsdk.ui.uicomponents.OstH3Label
        android:id="@+id/labelSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="@string/enter_mnemonics_sub_heading" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_corner_edittext_bg">

        <com.ost.walletsdk.ui.uicomponents.OstEditText
            android:id="@+id/et_mnemonics_phrase"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

    <com.ost.walletsdk.ui.uicomponents.OstB1Label
        android:id="@+id/pbtn_recover_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Recover Wallet" />

    <com.ost.walletsdk.ui.uicomponents.OstH4Label
        android:id="@+id/labelHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="" />
</merge>