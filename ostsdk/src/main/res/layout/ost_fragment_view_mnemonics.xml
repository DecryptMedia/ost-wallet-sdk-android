<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ost.walletsdk.ui.uicomponents.OstH1Label
                android:id="@+id/labelHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:text="Your Mnemonic Phrase" />

            <com.ost.walletsdk.ui.uicomponents.OstH3Label
                android:id="@+id/labelSubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:text="Please write down your 12-word mnemonic phrase and store safely." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ost_rounded_corner_bg">

                <com.ost.walletsdk.ui.uicomponents.OstH2Label
                    android:id="@+id/mnemonics_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:text="word" />

                <com.ost.walletsdk.ui.uicomponents.OstH2Label
                    android:id="@+id/mnemonics_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:text="setup" />
            </RelativeLayout>

            <com.ost.walletsdk.ui.uicomponents.OstH4Label
                android:id="@+id/labelCaution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="start"
                android:text="You can write the phrases down in a piece of paper or save in a secure password manager. Donâ€™t email them or screenshot them. The order of words is important. " />

        </LinearLayout>

    </ScrollView>
</merge>