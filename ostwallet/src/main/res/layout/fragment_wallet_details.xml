<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.workflow.walletdetails.WalletDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/user_detail_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="OST User Id" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableRight="@drawable/icon_copy"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#34445b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="User Status" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#0f9d58" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Token ID" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_token_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#34445b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Token Holder Address" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_token_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableRight="@drawable/icon_view"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#438bad" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Device Address" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_device_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableRight="@drawable/icon_copy"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#34445b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Device Status" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#0f9d58" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Device Manager Address" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_device_manager_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableRight="@drawable/icon_view"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#438bad" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Recovery Key Address" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_recovery_key_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableRight="@drawable/icon_copy"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#34445b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Recovery Owner Address"
                android:visibility="visible" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_recovery_owner_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableRight="@drawable/icon_view"
                android:drawablePadding="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#438bad" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>

            <com.ost.ostwallet.uicomponents.OstBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:text="Platform End Point" />

            <com.ost.ostwallet.uicomponents.OstTextView
                android:id="@+id/ost_user_platform_endpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#34445b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#e3e3e3"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>